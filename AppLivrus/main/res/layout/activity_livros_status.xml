<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="roberth.com.applivrus.app.LivrosStatus">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_status_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="#919191"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/tv_status_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="#989898"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:text="Autor: "
            android:textColor="@color/preto"/>

        <TextView
            android:id="@+id/tv_status_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="#989898"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:text="Gênero: "
            android:textColor="@color/preto"/>

        <TextView
            android:id="@+id/tv_status_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="#989898"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:text="Estado:  "
            android:textColor="@color/preto"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:text="Progresso de leitura"
            android:textAlignment="center"
            android:textColor="@color/preto"/>

        <ProgressBar
            android:id="@+id/pb_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:progressBackgroundTintMode="src_in"
            android:progressTint="@color/verde"
            style="@android:style/Widget.ProgressBar.Horizontal"/>

        <TextView
            android:id="@+id/tv_status_progresso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center" />

        <RatingBar
            android:id="@+id/rb_status"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="1.0"
            android:backgroundTint="@color/amarelo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu comentário:"
            android:layout_marginTop="10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#92929292">

            <TextView
                android:id="@+id/tv_status_comentario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"/>
        </ScrollView>

        <Button
            android:id="@+id/bt_status"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Editar dados"
            android:onClick="editarDados"/>

    </LinearLayout>

</ScrollView>
