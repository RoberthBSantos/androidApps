<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/preto"
    tools:context="roberth.com.applivrus.app.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/biblioteca_logo"/>

    <EditText
        android:id="@+id/ed_login_usuario"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/branco"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="user"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/ed_login_senha"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/branco"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:hint="password"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:clickable="true"
        android:src="@drawable/bottao_login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cadastre-se!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:clickable="true"
        android:onClick="cadastroUsuario"/>

    </LinearLayout>
</ScrollView>
